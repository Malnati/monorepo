# app/api.env.example
# Dados sensíveis - valores padrão estão no docker-compose.yml

# Database
DATABASE_HOST=
DATABASE_PORT=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_NAME=

# Google Maps API Configuration
# Chave server-side restrita por IP para validação de place_id
GOOGLE_MAPS_SERVER_KEY=

# Google SSO Configuration
# Client ID e Secret do Google OAuth 2.0
# Configure no Google Cloud Console: console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT Configuration
# Chave secreta para assinatura de tokens (mínimo 32 caracteres)
# Gere com: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRES_IN=24h

# Gmail API Configuration
# Credenciais OAuth 2.0 para envio de e-mails transacionais
# Configure no Google Cloud Console: console.cloud.google.com
# Documentação: docs/rup/99-anexos/MVP/plano-integration-gmail.md
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_SENDER=noreply@dominio.com.br

# App URLs
# Base URL da aplicação frontend para links em e-mails
APP_BASE_URL=http://localhost:5174

# OpenRouter AI Configuration
# API key para acesso ao OpenRouter (https://openrouter.ai/)
# Usado para agentes de IA: validação de onboarding, moderação de conteúdo
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/app/api/v1/chat/completions
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_HTTP_REFERER=
OPENROUTER_APP_TITLE=APP
