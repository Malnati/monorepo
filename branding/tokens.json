{
  "brand": {
    "name": "APP",
    "shortName": "APP",
    "description": "Plataforma de marketplace genérico",
    "tagline": "Conectando produtos e serviços a novas oportunidades"
  },
  "palette": {
    "primary": {
      "color": "#2D0F55",
      "name": "Roxo Profundo",
      "usage": "Backgrounds principais, identidade core"
    },
    "secondary": {
      "color": "#00B5B8",
      "name": "Turquesa",
      "usage": "Elementos secundários, destaque funcional"
    },
    "surface": {
      "color": "#F4F5FB",
      "name": "Superfície Clara",
      "usage": "Backgrounds de conteúdo, cards"
    },
    "neutral": {
      "textPrimary": "#1C1D22",
      "textSecondary": "#6B7280",
      "border": "#D9DBE7",
      "background": "#FFFFFF"
    },
    "feedback": {
      "success": "#1DB954",
      "warning": "#FF9F1C",
      "error": "#E63946"
    }
  },
  "typography": {
    "headlines": {
      "family": "Manrope",
      "source": "Google Fonts",
      "weight": "Semibold"
    },
    "body": {
      "family": "Inter",
      "source": "Google Fonts",
      "weight": "Regular"
    },
    "scale": {
      "headline": {
        "size": "32px",
        "lineHeight": "1.25",
        "weight": "Semibold"
      },
      "subtitle": {
        "size": "24px",
        "lineHeight": "1.33",
        "weight": "Semibold"
      },
      "body": {
        "size": "16px",
        "lineHeight": "1.5",
        "weight": "Regular"
      },
      "caption": {
        "size": "12px",
        "lineHeight": "1.4",
        "weight": "Regular"
      }
    }
  },
  "spacing": {
    "scale": {
      "4": "4px",
      "8": "8px",
      "16": "16px",
      "24": "24px",
      "32": "32px",
      "48": "48px"
    }
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px"
  },
  "icons": {
    "library": "Material Symbols Rounded",
    "source": "Google",
    "minSize": "20px"
  },
  "whiteLabel": {
    "enabled": true,
    "customizable": {
      "colors": ["primary", "secondary"],
      "logo": true,
      "typography": false,
      "spacing": false
    },
    "fallback": "default"
  }
}

